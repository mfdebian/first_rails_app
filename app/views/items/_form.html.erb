<%= form_with model: item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% item.errors.full_messages_for(:name).each do |message| %>
      <div style="color: red">
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
    <% item.errors.full_messages_for(:price).each do |message| %>
      <div style="color: red">
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <p>
      <%= form.submit "Save item" %>
    </p>
  </div>
<% end %>

<%= link_to "Cancel", item %>